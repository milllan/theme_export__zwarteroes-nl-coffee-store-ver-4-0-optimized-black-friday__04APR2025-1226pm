    display: flex;
    gap: 5px;
    padding: 10px 0;
    background: #ffffff;
    min-width: 285;
    width: 285;
}
    #shopify-section-305d6112-7453-40cb-b409-cff616d6a997  .product-list-scroll .list-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 5px;
    cursor: pointer;
    transition: all .3s ease-in-out;
    flex: 1 0 84px;
}
   #shopify-section-305d6112-7453-40cb-b409-cff616d6a997   .product-list-scroll .image-wrapper {
    min-width: 66px;
    width: 66px;
    height: 66px;
    border-radius: 50%;
    overflow: hidden;
    background: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
}
    #shopify-section-305d6112-7453-40cb-b409-cff616d6a997  .product-list-scroll .product-list-title {
    font-weight: 400;
    font-style: normal;
    color: #000;
    font-size: 13px;
    line-height: 1.25;
    text-align: center;
}
    #shopify-section-305d6112-7453-40cb-b409-cff616d6a997  .product-list-scroll .image-wrapper img {
    max-width: 100%;
