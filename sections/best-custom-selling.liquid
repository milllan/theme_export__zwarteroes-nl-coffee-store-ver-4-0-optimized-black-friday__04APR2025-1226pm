<section id="shopify-section-305d6112-7453-40cb-b409-cff616d6a997" class="shopify-section shopify-product-list">

    <div class="product-list-scroll">
        <div class="container">
            <div class="product-list-wrap" style="--background-color:#ffffff; --scrollWidth: 285">

                {% assign collection_handle = 'best-selling' %}
                {% assign collection = collections[collection_handle] %}
                
                {% for product in collection.products %}
                    <a href="{{ product.url }}" class="list-item">
                        <span class="image-wrapper">
                            <img src="{{ product.featured_image | img_url: 'master' }}" alt="{{ product.title }}" width="50" height="50" loading="lazy">
                        </span>
                        {% assign custom_title = product.metafields.custom.best_selling_title %}
                        <span class="product-list-title">
                            {% if custom_title != blank %}
                                {{ custom_title }}
                            {% else %}
                                {{ product.title }}
                            {% endif %}
                        </span>
                    </a>
                {% endfor %}

            </div>
        </div>
    </div>

</section>


   <style>
    #shopify-section-305d6112-7453-40cb-b409-cff616d6a997  .container{
        padding-right: 10px;
        padding-left: 10px;
        width: 100%;
        margin-right: auto;
        margin-left: auto;
       display:none;
     }
